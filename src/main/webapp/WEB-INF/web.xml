    <!-- 
 -->

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <!-- Error handling. -->

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/errors/default.do</location>
    </error-page>

   <error-page>
        <error-code>403</error-code>
        <location>/errors/accessDenied.do</location>
    </error-page>

    <!-- 1 hour before session timeout. -->
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
</web-app>